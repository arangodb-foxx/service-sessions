{
  "name": "session-service",
  "version": "1.1.0",
  "author": "ArangoDB GmbH",
  "license": "Apache License, Version 2.0",
  "description": "ArangoDB Session-Service",
  "defaultDocument": "",
  "controllers": "api.js",
  "scripts": {
    "setup": "scripts/setup.js",
    "teardown": "scripts/teardown.js",
    "prune": "scripts/prune.js"
  },
  "configuration": {
    "usersRoot": {
      "default": "/users",
      "type": "string",
      "description": "Root URL of user service."
    },
    "sessionIdLength": {
      "default": 16,
      "type": "integer",
      "description": "Length of generated session IDs."
    },
    "signingSecretLength": {
      "default": 128,
      "type": "integer",
      "description": "Length of generated session secrets."
    },
    "signingAlgorithm": {
      "default": "sha256",
      "type": "string",
      "description": "Hash algorithm to use for signatures."
    },
    "expiryDuration": {
      "default": 1209600,
      "type": "integer",
      "description": "Session timeout in seconds."
    }
  }
}